<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_broadcast_receiver"
    tools:context="com.arush.android.pafinal.BroadcastReceiverActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Info Comes Here"
            android:id="@+id/textView2" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:onClick="doRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register Intent"
                android:id="@+id/button7"
                android:layout_weight="1" />

            <Button
                android:onClick="doUnregister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unregister Intent"
                android:id="@+id/button8"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:onClick="doBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Main"
            android:id="@+id/button9"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</RelativeLayout>
